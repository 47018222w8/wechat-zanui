<view>
  <swiper indicator-active-color="#fff" indicator-color="#666" style="height:{{hei}}" indicator-dots="{{true}}" autoplay="{{true}}">
    <block wx:for="{{imgUrls}}">
      <swiper-item>
        <image src="{{item}}" bindload="imgH" class="slide-image" />
      </swiper-item>
    </block>
  </swiper>
  <view class="font-hot">
  <image style="width:24px;height:26px;" src="http://58.87.98.173:9008/img/hot.png"></image>
  火拼中</view>
  <view wx:for="{{goodsList}}" wx:key="{{index}}">
  <image src="{{goodsImgs[index]}}" class="img-a" />
  <view class="desc-a">
    <view class="desc-son-a">【最新特惠】{{item.goodsName}}</view>
    <view class="desc-son-b">{{item.offeringName}}</view>
    <view class="flex-a">
      <view class="flex-a-item-a">预存款 
        <text>50</text>元</view>
      <button size="mini" bindtap="toGroupBuy" data-id="{{item.offeringId}}">去拼团 ></button>
    </view>
  </view>
  </view>
  

  <image src="http://58.87.98.173:9008/img/index-b.png" class="img-a" />
  <view class="desc-a">
    <view class="desc-son-a">【最新特惠】腾讯大王卡团购</view>
    <view class="desc-son-b">全国腾讯流量全免，首充50得50，首月可免费体验</view>
    <view class="flex-a">
      <view class="flex-a-item-a">预存款 
        <text>50</text>元</view>
      <button size="mini" bindtap="toGroupBuy">去拼团 ></button>
    </view> 
  </view>
</view>